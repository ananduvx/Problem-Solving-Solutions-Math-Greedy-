
class Solution {
    public boolean isPalindrome(int x) {
        String a=Integer.toString(x);
        String b="";
        int n=a.length();
                for(int i = n - 1; i >= 0; i--)

        {

            b = b + a.charAt(i);

        }
                if(a.equalsIgnoreCase(b))

        {

            return true;

        }

        else

        {

            return false;

        }
        
    }
}
